# =============================================================================
# Environment Configuration Template
# Copy to .env for local development
# =============================================================================

# General
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=postgresql://waqedi:waqedi_dev@localhost:5432/waqedi

# Redis
REDIS_URL=redis://localhost:6379

# Vector Database
QDRANT_URL=http://localhost:6333

# Message Queue
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=waqedi
MINIO_SECRET_KEY=waqedi_dev_secret
MINIO_BUCKET=waqedi-documents

# Observability
OTLP_ENDPOINT=http://localhost:4317
METRICS_ENABLED=true
TRACING_ENABLED=true

# Security (CHANGE IN PRODUCTION)
JWT_SECRET=dev-secret-change-in-production
API_KEY_HEADER=X-API-Key

# ============================================================================
# LLM Configuration (Ollama + Qwen - Fully Offline)
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b
OLLAMA_TIMEOUT=120
OLLAMA_TEMPERATURE=0.1
OLLAMA_MAX_TOKENS=2048

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:8001
RAG_SERVICE_URL=http://localhost:8009
PIPELINE_SERVICE_URL=http://localhost:8008
EMBEDDING_SERVICE_URL=http://localhost:8004
